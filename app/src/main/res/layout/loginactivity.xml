<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#FFFFFFFF"
        >
        <TextView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
           android:layout_marginLeft="20px"
            android:textSize="32px"
            android:textColor="#888888"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="#000"
            android:textSize="37px"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="24px"
            android:textColor="#FFA725"
            android:textSize="37px"
            />


    </RelativeLayout>

    <ImageView
        android:layout_width="178px"
        android:layout_height="178px"
        android:src="@mipmap/logo"
        android:layout_marginTop="65px"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共享晚餐会"
        android:textColor="#FF9800"
        android:layout_gravity="center"
        android:textSize="36px"
        />

    <LinearLayout
        android:layout_marginTop="74px"
        android:layout_width="620px"
        android:layout_height="98px"
        android:layout_gravity="center"
        android:background="@drawable/background_hui"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30px"
            android:layout_height="45.6px"
            android:layout_gravity="center"
            android:src="@mipmap/phone"
            android:layout_marginLeft="29px"
            />


         <EditText
             android:id="@+id/ed_phone"
             android:layout_weight="1"
             android:layout_width="0px"
             android:layout_height="match_parent"
             android:background="#00000000"
             android:hint="手机号码"
             android:textSize="30px"
             android:layout_gravity="center"
             android:layout_marginLeft="30px"
             android:inputType="number"
             android:singleLine="true"
             />
        
        <ImageView
            android:id="@+id/clear"
            android:layout_width="30.7px"
            android:layout_height="30.7px"
            android:src="@mipmap/out"
            android:layout_gravity="center"
            android:layout_marginRight="30px"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="33px"
        android:layout_width="620px"
        android:layout_height="98px"
        android:layout_gravity="center"
        android:background="@drawable/background_hui"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30px"
            android:layout_height="45.6px"
            android:layout_gravity="center"
            android:src="@mipmap/shape"
            android:layout_marginLeft="29px"
            />


        <EditText
            android:id="@+id/ed_code"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="短信验证码"
            android:textSize="30px"
            android:layout_gravity="center"
            android:layout_marginLeft="30px"
            android:inputType="number"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/login_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:text="获取验证码"
            android:layout_gravity="center"
            android:layout_marginRight="30px"
            android:textSize="30px"
            android:textColor="#EDAB4A"
            />

    </LinearLayout>
    <Button
        android:id="@+id/bt_login"
        android:layout_marginTop="66px"
        android:layout_width="620px"
        android:layout_height="98px"
        android:layout_gravity="center"
        android:background="@drawable/btn_background_update"
        android:orientation="horizontal"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="36px"
        />

</LinearLayout>
