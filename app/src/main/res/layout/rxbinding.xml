<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<Button
    android:id="@+id/time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="发送验证码"
    />


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:enabled="false"
        />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#F7F7FA"
        >



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="58px"
            android:background="@drawable/shape_group_icon_bg"
            android:layout_marginLeft="20px"
            android:layout_gravity="center"
            >

            <EditText
                android:id="@+id/ed_fitersearch"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:textColor="#989898"
                android:textSize="30px"
                android:hint="搜索"
                android:background="#00000000"
                android:layout_marginLeft="20px"
                android:layout_gravity="center"

                />

        </LinearLayout>



        <TextView
            android:id="@+id/fiter_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_gravity="center"
            android:textColor="#888888"
            android:textSize="32px"
            android:layout_marginLeft="14.8px"
            android:layout_marginRight="11px"
            />
    </LinearLayout>


    <ListView
        android:id="@+id/filter_search_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>
</LinearLayout>
