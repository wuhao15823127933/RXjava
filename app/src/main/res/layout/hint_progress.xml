<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent">

    <RelativeLayout
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_group_icon_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/progress_bkg_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/loading_icon1" />

        <TextView
            android:id="@+id/my_hint_tv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_bkg_img"
            android:text="正在加载，请稍等……"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey_300"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>